# Example environment variables for NestJS M-Pesa Backend
PORT=3000
NODE_ENV=production
# Daraja (M-Pesa)
DAR_AJA_CONSUMER_KEY=your_consumer_key
DAR_AJA_CONSUMER_SECRET=your_consumer_secret
DAR_AJA_SHORTCODE=4312012
DAR_AJA_PASSKEY=your_passkey
DAR_AJA_ENV=sandbox # sandbox | production
DAR_AJA_BASEURL_SANDBOX=https://sandbox.safaricom.co.ke
DAR_AJA_BASEURL_PROD=https://api.safaricom.co.ke
# Database (Postgres)
DATABASE_URL=postgresql://db_user:db_pass@db-host:5432/db_name?schema=public
# Flutter callback or FCM
FLUTTER_CALLBACK_URL=https://your-flutter-server.example.com/api/payment/notify
FCM_SERVER_KEY=your_fcm_server_key
# Safety
ALLOWED_SAFARICOM_IPS=196.200.10.0/24,196.200.12.0/24
# Optional Redis (for queues)
REDIS_URL=redis://localhost:6379
